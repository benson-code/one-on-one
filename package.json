{
  "name": "one-on-one",
  "version": "1.0.0",
  "description": "One on One tour guide platform with web and mobile applications",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:mobile\"",
    "dev:web": "npm run dev --workspace=@one-on-one/web",
    "dev:mobile": "npm run dev --workspace=@one-on-one/mobile",
    "build": "npm run build --workspaces",
    "build:web": "npm run build --workspace=@one-on-one/web",
    "build:mobile": "npm run build --workspace=@one-on-one/mobile",
    "test": "npm run test --workspaces",
    "lint": "eslint packages/*/src --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write packages/*/src/**/*.{js,jsx,ts,tsx,json,css,md}"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}